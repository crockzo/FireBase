<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/setName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="enter name"
        android:textAllCaps="true"
        android:layout_gravity="center"
        android:textColorHint="#b3b3b3"
        />


    <EditText
        android:id="@+id/setAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="enter amount"
        android:textAllCaps="true"
        android:layout_gravity="center"
        android:textColorHint="#b3b3b3"
        />

    <EditText
        android:id="@+id/setDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="enter date"
        android:textAllCaps="true"
        android:layout_gravity="center"
        android:textColorHint="#b3b3b3"
        />


    <EditText
        android:id="@+id/setMonth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="enter month"
        android:textAllCaps="true"
        android:layout_gravity="center"
        android:textColorHint="#b3b3b3"
        />
    <Button
        android:id="@+id/sendData"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add data to the firebase"
         />

    <TextView
        android:id="@+id/setReadData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="data base read data"
        />

    <Button
        android:id="@+id/getDataFromDataBase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="read data"
        />

    <Button
        android:id="@+id/update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="update"
        />

    <Button
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="delete"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/PaymentRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
</LinearLayout>